{
  "compilerOptions": {
    "types": ["node", "mocha"],
    "allowJs": true,
    "rootDir": "./",
    "sourceMap": true,
    "outDir": ".build",
    "composite": true,
    "target": "ES2019",
    "lib": ["ES2019", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "build": true,
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": ["src", "scripts/cloud.ts", "scripts/dev.ts", "setup.spec.ts"]
}
