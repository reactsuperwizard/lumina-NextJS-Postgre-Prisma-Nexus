{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.workingDirectories": [
    "./apps/web",
    "./apps/api",
    "./apps/render",
    "./apps/vanity",
    "./apps/player"
  ],
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/node_modules/**": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "cSpell.words": [
    "AWSS",
    "Hubspot",
    "middlewares",
    "mrkdwn",
    "Nexrender",
    "uploaders"
  ]
}
